<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="rounding_12">
        <item name="cornerSize">@dimen/dimens_12</item>
    </style>
  
    <style name="CommonButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/yp_blue</item>
        <item name="cornerRadius">@dimen/dimens_12</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/whiteDayBlackNight</item>
        <item name="itemIconTint">@drawable/bottomnav_main_menu_color</item>
        <item name="itemTextColor">@drawable/bottomnav_main_menu_color</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/textSize_16</item>
    </style>

    <style name="PlaylistEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/yp_gray</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>