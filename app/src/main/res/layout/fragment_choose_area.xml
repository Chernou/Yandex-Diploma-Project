<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.filter.presentation.fragments.ChooseAreaFragment">

    <ImageView
        android:id="@+id/choose_region_back_arrow_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_20"
        android:layout_marginTop="@dimen/dimens_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_arrow" />

    <TextView
        android:id="@+id/choose_region_header_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_20"
        android:layout_marginTop="@dimen/dimens_20"
        android:fontFamily="@font/ys_display_medium"
        android:text="Выбор региона"
        android:textColor="@color/blackDayWhiteNight"
        android:textSize="@dimen/textSize_22"
        app:layout_constraintStart_toEndOf="@+id/choose_region_back_arrow_imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/choose_region_enter_field_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_16"
        android:layout_marginTop="@dimen/dimens_24"
        android:background="@drawable/rounded_edittext_background"
        android:backgroundTint="@color/yp_lightGray"
        android:drawableEnd="@drawable/ic_search"
        android:drawableTint="@color/yp_black"
        android:fontFamily="@font/ys_display_regular"
        android:hint="Введите регион"
        android:imeOptions="actionDone"
        android:padding="@dimen/dimens_16"
        android:singleLine="true"
        android:textColor="@color/yp_black"
        android:textColorHint="@color/grayDayWhiteNight"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/textSize_16"
        app:layout_constraintTop_toBottomOf="@+id/choose_region_header_textview" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choose_region_list_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimens_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_region_enter_field_edittext"
        tools:itemCount="15"
        tools:listitem="@layout/industry_area_item" />

    <Button
        android:id="@+id/choose_region_approve_button"
        style="@style/CommonButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/dimens_16"
        android:layout_marginBottom="@dimen/dimens_24"
        android:fontFamily="@font/ys_display_medium"
        android:text="Выбрать"
        android:textAllCaps="false"
        android:textSize="@dimen/textSize_16"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/choose_region_list_recycle_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>