<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.filter.presentation.fragments.SettingsFiltersFragment">

    <ImageView
        android:id="@+id/settings_back_arrow_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_20"
        android:layout_marginTop="@dimen/dimens_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_arrow" />

    <TextView
        android:id="@+id/settings_header_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_20"
        android:layout_marginTop="@dimen/dimens_20"
        android:fontFamily="@font/ys_display_medium"
        android:text="Настройки фильтрации"
        android:textColor="@color/blackDayWhiteNight"
        android:textSize="@dimen/textSize_22"
        app:layout_constraintStart_toEndOf="@+id/settings_back_arrow_imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workplace_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16"
        android:layout_marginTop="@dimen/dimens_48"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/blackDayWhiteNight"
        android:textSize="@dimen/textSize_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_header_textview"
        tools:text="Место работы" />

    <TextView
        android:id="@+id/country_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/blackDayWhiteNight"
        android:textSize="@dimen/textSize_16"
        app:layout_constraintStart_toStartOf="@+id/workplace_textview"
        app:layout_constraintTop_toBottomOf="@+id/workplace_textview"
        tools:text="Россия, Москва" />

    <ImageView
        android:id="@+id/workplace_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_16"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@+id/country_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/workplace_textview"
        app:tint="@color/blackDayWhiteNight" />

    <ImageView
        android:id="@+id/workplace_clear_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_16"
        android:src="@drawable/ic_clear"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/country_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/workplace_textview"
        app:tint="@color/blackDayWhiteNight" />

    <TextView
        android:id="@+id/industry_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_24"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/blackDayWhiteNight"
        android:textSize="@dimen/textSize_12"
        app:layout_constraintStart_toStartOf="@+id/workplace_textview"
        app:layout_constraintTop_toBottomOf="@+id/country_textview"
        tools:text="Отрасль" />

    <TextView
        android:id="@+id/job_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/blackDayWhiteNight"
        android:textSize="@dimen/textSize_16"
        app:layout_constraintStart_toStartOf="@+id/industry_textView"
        app:layout_constraintTop_toBottomOf="@+id/industry_textView"
        tools:text="IT" />

    <ImageView
        android:id="@+id/industry_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@+id/job_textview"
        app:layout_constraintEnd_toEndOf="@+id/workplace_imageview"
        app:layout_constraintTop_toTopOf="@+id/industry_textView"
        app:tint="@color/blackDayWhiteNight" />

    <ImageView
        android:id="@+id/industry_clear_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/job_textview"
        app:layout_constraintEnd_toEndOf="@+id/workplace_imageview"
        app:layout_constraintTop_toTopOf="@+id/industry_textView"
        app:tint="@color/blackDayWhiteNight" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/salary_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_16"
        android:layout_marginTop="@dimen/dimens_24"
        android:hint="Ожидаемая ЗП"
        android:textColorHint="@color/grayDayWhiteNight"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:expandedHintEnabled="false"
        app:hintEnabled="true"
        app:hintTextColor="@color/yp_gray"
        app:layout_constraintTop_toBottomOf="@id/job_textview"
        app:placeholderTextColor="@color/yp_gray">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_background"
            android:fontFamily="@font/ys_display_regular"
            android:inputType="number"
            android:text="Введите сумму"
            android:textColor="@color/grayDayWhiteNight"
            android:textSize="@dimen/textSize_16" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/do_not_show_without_salary_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:text="Не показывать без ЗП"
        android:textColor="@color/blackDayWhiteNight"
        android:textSize="@dimen/textSize_16"
        app:layout_constraintBottom_toBottomOf="@+id/do_not_show_without_salary_checkBox"
        app:layout_constraintStart_toStartOf="@+id/salary_editText"
        app:layout_constraintTop_toTopOf="@+id/do_not_show_without_salary_checkBox" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/do_not_show_without_salary_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_32"
        android:theme="@style/WhiteCheck"
        app:buttonTint="@color/yp_blue"
        app:layout_constraintEnd_toEndOf="@+id/industry_imageview"
        app:layout_constraintStart_toStartOf="@+id/industry_imageview"
        app:layout_constraintTop_toBottomOf="@+id/salary_editText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_16"
        android:layout_marginBottom="@dimen/dimens_32"
        android:background="@drawable/rounded_edittext_background"
        android:backgroundTint="@color/yp_blue"
        android:text="Применить"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_16"
        app:layout_constraintBottom_toTopOf="@+id/reset_settings_textview"
        app:layout_constraintEnd_toEndOf="@+id/reset_settings_textview"
        app:layout_constraintStart_toStartOf="@+id/reset_settings_textview" />

    <TextView
        android:id="@+id/reset_settings_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_16"
        android:layout_marginBottom="@dimen/dimens_48"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        android:text="Сбросить"
        android:textColor="@color/redDayWhiteNight"
        android:textSize="@dimen/textSize_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>